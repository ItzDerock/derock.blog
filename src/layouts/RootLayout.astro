---
import BaseHead from "../components/BaseHead.astro";

interface Props {
  title: string;
  description: string;
}
---

<html lang="en">
  <head>
    <BaseHead title={Astro.props.title} description={Astro.props.description} />
  </head>
  <body
    class="mx-auto min-h-screen dark dark:from-gray-950 dark:to-[#070F2B] dark:bg-gradient-to-br dark:text-white"
  >
    <slot />
  </body>
</html>
